{
  "name": "codeigniter-portfolio",
  "version": "1.0.0",
  "description": "Portfolio website built with CodeIgniter 4, TailwindCSS, and JavaScript",
  "main": "index.js",
  "scripts": {
    "dev": "tailwindcss -i ./public/src/input.css -o ./public/src/output.css --watch",
    "build": "tailwindcss -i ./public/src/input.css -o ./public/src/output.css --minify",
    "build:css": "npm run build",
    "watch": "npm run dev",
    "clean": "rm -rf public/src/output.css",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "codeigniter",
    "portfolio",
    "tailwindcss",
    "php",
    "javascript",
    "responsive",
    "website"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.4.17",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/aspect-ratio": "^0.4.2"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/username/codeigniter-portfolio"
  },
  "bugs": {
    "url": "https://github.com/username/codeigniter-portfolio/issues"
  },
  "homepage": "https://github.com/username/codeigniter-portfolio#readme"
}